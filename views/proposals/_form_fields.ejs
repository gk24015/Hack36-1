<div class="container">
    <h3>New Proposal</h3>
    <div>
        <label for="title">Title: </label>
        <input type="text" name="title" id="title" required value="<%=proposal.title%>" class="form-control">
    </div>
    <div>
        <label for="title">Tech Stack: </label>
        <input type="text" name="techstack" id="techstack" required value="<%=proposal.techStack%>" class="form-control">
    </div>
    <div class="mt-3">
        <label for="Description">Description: </label>
        <input type="text" name="description" id="description" required value="<%=proposal.description%>" class="form-control">
    </div>
    <div class="row mt-3">
        <div class="col-sm-6">
            <label for="deadline">Deadline :</label>
            <input type="date" name="deadline" required
            value="<%= proposal.deadline == null ? '' : proposal.deadline.toISOString().split('T')[0] %>">
        </div>
        <div class="col-sm-6">
            <label for="repo">Repository :</label>
            <select name="repo">
                <% repos.forEach(repo => { %>
                    <option label="<%=repo%>" value="<%=repo%>"></option>
                <% }) %>
            </select>
        </div>
    </div>
    <div>
        <label for="Image">Image :</label>
        <input type="file" class="filepond" name="cover" id="cover">
    </div>
    <button type="submit">Submit</button>
</div>