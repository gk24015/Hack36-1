<div class="container index-center">
    <h2 class="page-header"> View Proposals </h2>
    <div class="proposal-grid">
        <% proposals.forEach(proposal => { %>
            <div class="card border-secondary mt-4" style="width: 18rem;">
                <img height=250 width=100 class="card-img-top card-image" src="<%= proposal.coverImagePath %>" alt="Card image Cap">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <%= proposal.title %>
                    </h5>
                    <div class="card-subtitle mb-2">
                        <%= proposal.organization.toUpperCase() %>
                    </div>
                    <div class="card-text mb-2">
                        <%= proposal.description.substring(0, 100) %>
                    </div>
                    <div class="text-muted">
                        <%= proposal.deadline.toLocaleDateString() %>
                    </div>
                    <a class="btn btn-secondary" href="/proposal/<%= proposal.id %>"><i class="fas mr-2 fa-angle-double-right"></i>More Info</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>